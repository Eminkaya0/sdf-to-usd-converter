<?xml version="1.0"?>
<sdf version="1.9">
  <model name="simple_box_robot">
    <link name="base_link">
      <pose>0 0 0.5 0 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.0833</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0833</iyy>
          <iyz>0</iyz>
          <izz>0.0833</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.8 0.2 0.2</diffuse>
          <specular>0.5 0.5 0.5</specular>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
      </collision>
    </link>

    <link name="wheel_left">
      <pose degrees="true">0.15 0.2 0.1 90 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="wheel_left_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1</diffuse>
        </material>
      </visual>
      <collision name="wheel_left_collision">
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
      </collision>
    </link>

    <link name="wheel_right">
      <pose degrees="true">0.15 -0.2 0.1 -90 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="wheel_right_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1</diffuse>
        </material>
      </visual>
      <collision name="wheel_right_collision">
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
      </collision>
    </link>

    <joint name="wheel_left_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_left</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.01</damping>
        </dynamics>
      </axis>
    </joint>

    <joint name="wheel_right_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_right</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.01</damping>
        </dynamics>
      </axis>
    </joint>
  </model>
</sdf>
